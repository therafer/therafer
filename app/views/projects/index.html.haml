%h2 Projects

- if current_user.present?
  =form_for @project do |f|
    = f.label :name
    = f.text_field :name

    = f.label :description
    = f.text_area :description

    = f.label :url
    = f.text_field :url

    %div.action
      =f.submit "Add Project"


-@projects.each do |project|
  %div
    %ul= project.name
    %ul= project.description
    %ul= project.url
  - if current_user.present?
    %ul= link_to 'Edit', edit_project_path(project)
    %ul= link_to 'Delete', project_path(project), method: :delete
